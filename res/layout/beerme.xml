<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <TableRow android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/large_beer"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/large_beer"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/large_beer_count"
            android:layout_weight="1"
            android:gravity="left"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow android:layout_width="fill_parent" >

        <Button
            android:id="@+id/button_large_beer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:onClick="addLargeBeer"
            android:text="@string/button_large_beer" />
    </TableRow>

    <TableRow android:layout_width="fill_parent" >

        <TextView
            android:id="@+id/small_beer"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/small_beer"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/small_beer_count"
            android:layout_weight="1"
            android:gravity="left"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow android:layout_width="fill_parent" >

        <Button
            android:id="@+id/button_small_beer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:onClick="addSmallBeer"
            android:text="@string/button_small_beer" />
    </TableRow>
	
    <View
        android:layout_height="2dip"
        android:background="#FF0000" />

    <TableRow android:layout_width="fill_parent" >

        <Button
            android:id="@+id/button_undo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:onClick="undo"
            android:text="@string/button_undo" />
    </TableRow>
    
    <View
        android:layout_height="5dip"
        android:background="#FF0000" />

    <TableRow android:layout_width="fill_parent" >

        <Button
            android:id="@+id/button_reset"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:onClick="reset"
            android:text="@string/button_reset" />
    </TableRow>

</TableLayout>